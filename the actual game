<body>
  <h1>🎲 937.Nead lC</h1>
  <button onclick="roll()">Roll</button>
  <div id="result"></div>

  <script>
    const tiers = [
      { name: "Trash", emoji: "🗑️", weight: 400, color: "gray", items: ["Broken stick", "Deflated balloon"] },
      { name: "Basic", emoji: "📦", weight: 250, color: "white", items: ["Old sock", "Plastic spoon"] },
      { name: "Uncommon", emoji: "🟢", weight: 150, color: "lime", items: ["Silver coin", "Small gem"] },
      { name: "Rare", emoji: "🔵", weight: 100, color: "deepskyblue", items: ["Magic wand", "Mini dragon"] },
      { name: "Epic", emoji: "🟣", weight: 50, color: "purple", items: ["Enchanted sword", "Phoenix feather"] },
      { name: "Legendary", emoji: "🟠", weight: 30, color: "orange", items: ["Dragon mount", "Orb of power"] },
      { name: "Mythical", emoji: "🔮", weight: 10, color: "deeppink", items: ["Time crystal", "Ancient grimoire"] },
      { name: "Divine", emoji: "✨", weight: 5, color: "gold", items: ["Celestial crown", "Angel wings"] },
      { name: "Void", emoji: "🕳️", weight: 1, color: "black", items: ["Void shard", "Dark relic"] },
      { name: "Glitched", emoji: "🧬", weight: 0.1, color: "cyan", items: ["Glitched Frog King", "Corrupted rainbow"] }
    ];

    function roll() {
      const totalWeight = tiers.reduce((sum, t) => sum + t.weight, 0);
      let rand = Math.random() * totalWeight;
      let chosenTier;
      for (const tier of tiers) {
        if (rand < tier.weight) {
          chosenTier = tier;
          break;
        }
        rand -= tier.weight;
      }
      const item = chosenTier.items[Math.floor(Math.random() * chosenTier.items.length)];

      const resultDiv = document.getElementById("result");
      resultDiv.innerHTML = `<span style="color: ${chosenTier.color}; font-weight: bold; font-size: 1.5em;">
        ${chosenTier.emoji} You got: ${item} <br>
        Rarity: ${chosenTier.emoji} ${chosenTier.name}
      </span>`;
    }
  </script>
</body>
